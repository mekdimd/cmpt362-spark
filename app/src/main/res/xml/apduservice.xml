<?xml version="1.0" encoding="utf-8"?>
<!-- NFC HCE Service Configuration -->
<!-- Defines the AID (Application ID) group for our Host Card Emulation service -->
<host-apdu-service xmlns:android="http://schemas.android.com/apk/res/android"
    android:description="@string/nfc_service_description"
    android:requireDeviceUnlock="false">

    <!-- AID Group for NDEF Application -->
    <!-- Uses standard NFC Forum Type 4 Tag NDEF AID: D2760000850101 -->
    <aid-group android:category="other" android:description="@string/nfc_aid_description">
        <aid-filter android:name="D2760000850101" />
    </aid-group>
</host-apdu-service>

